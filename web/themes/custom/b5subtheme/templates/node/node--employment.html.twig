{#
/**
 * @file
 * Template for Employment content type.
 * 
 * Uses standard page layout with curved header and footer.
 * 
 * Available variables:
 * - content: Rendered content fields
 * - attributes: HTML attributes for the article element
 * - node: The node entity
 */
#}


<article{{ attributes.addClass('node', 'node--employment') }}>
  <div class="container">
    
    {# Main Content Area #}
    {% if content.field_main_content %}
      <div class="main-content">
        {{ content.field_main_content }}
      </div>
    {% endif %}

    {# Job Opportunities Section - Using Accordion #}
    {% if content.field_job_listings %}
      <div class="job-opportunities-section mt-4">
        <div class="accordion" id="jobListingsAccordion">
          {{ content.field_job_listings }}
        </div>
      </div>
    {% endif %}

    {# Benefits Section #}
    {% if content.field_benefits %}
      <div class="benefits-section mt-4">
        <h2 class="section-title text-center">Why Work With Us?</h2>
        {{ content.field_benefits }}
      </div>
    {% endif %}

    {# Call to Action Section #}
    <div class="cta-section mt-5 text-center">
      <h2 class="section-title">Ready to Join Our Team?</h2>
      <p class="lead">We're looking for dedicated professionals who share our commitment to providing quality legal services to our community.</p>
      <a href="/eapplication" class="btn btn-primary btn-lg">
        Apply Today
      </a>
    </div>

    {# Additional Content #}
    {% if content.field_additional_content %}
      <div class="additional-content mt-4">
        {{ content.field_additional_content }}
      </div>
    {% endif %}
  
  </div>{# End container #}
</article>